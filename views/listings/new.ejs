<% layout('layouts/boilerplate') %>
<div class="container mt-5">
  <%- include('../includes/error') %>
  <%- include('../includes/success') %>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/new.css">

<div class="container pb-5 mt-4 mb-5">
<div class="row">
  <div class="col-8 offset-1">
    <form method="POST" action="/listings/add" enctype="multipart/form-data" novalidate class="needs-validation">

  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input id="title" name="listing[title]" type="text" placeholder="Enter title" class="form-control" required>
    <div class="invalid-feedback">Please choose a title.</div>
  </div>

  <div class="mb-3">
    <label for="category" class="form-label">Category</label>
    <select class="form-select" id="category" name="listing[category]" required>
      <option disabled selected value="">Select a category</option>
      <option>Beach</option>
      <option>Mountain</option>
      <option>City</option>
      <option>Countryside</option>
      <option>Desert</option>
      <option>Lake</option>
      <option>Amazing Views</option>
    </select>
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Describe</label>
    <textarea id="description" name="listing[description]" placeholder="Description" class="form-control" required></textarea>
    <div class="invalid-feedback">Please describe.</div>
  </div>

  <div class="mb-3">
    <label for="image" class="form-label">Upload Image</label>
    <input id="image" type="file" name="image" class="form-control" accept="image/*" required autocomplete="off">
    <div class="invalid-feedback">Please upload an image.</div>
  </div>

  <div class="row">
    <div class="mb-3 col-md-4">
      <label for="price" class="form-label">Price</label>
      <input id="price" name="listing[price]" type="number" placeholder="Enter price" class="form-control" required>
      <div class="invalid-feedback">Please enter valid price.</div>
    </div>
    <div class="mb-3 col-md-8">
      <label for="country" class="form-label">Country</label>
      <input id="country" name="listing[country]" type="text" placeholder="Enter country" class="form-control" required autocomplete="off" >
      <div class="invalid-feedback">Please enter valid country name.</div>
    </div>
  </div>

  <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input id="location" name="listing[location]" type="text" placeholder="Enter location" class="form-control" required>
    <div class="invalid-feedback">Please enter valid location.</div>
  </div>

  <button type="submit" class="btn btn-dark" id="add-btn">Add</button>

</form>

  </div>
</div>
</div>
<!-- External JS (placed after layout content) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/script.js"></script>
